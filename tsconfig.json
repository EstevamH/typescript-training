{
  "compilerOptions": {
    "target": "es6",
    "outDir": "app/js",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "module": "system",
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/ts/**/*"
  ]
}